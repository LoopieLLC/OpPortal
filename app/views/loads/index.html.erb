<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row  loads-container">
    <h1 class="loads-header">Pick up Laundry</h1>
  </div> 
</div>



<table>
  <thead>
    <tr>
      <th>Washer</th>
      <th>Driver</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loads.each do |load| %>
      <tr>
        <td><%= load.washer_id %></td>
        <td><%= load.driver_id %></td>
        <td><%= load.status %></td>
        <td><%= link_to 'Show', load %></td>
        <td><%= link_to 'Edit', edit_load_path(load) %></td>
        <td><%= link_to 'Destroy', load, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

