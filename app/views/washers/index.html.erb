<p id="notice"><%= notice %></p>

<h1>Washers</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Status</th>
      <th>Max loads</th>
      <th>Current loads</th>
      <th>Machine description</th>
      <th>Start date</th>
      <th>Total loads completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @washers.each do |washer| %>
      <tr>
        <td><%= washer.username %></td>
        <td><%= washer.password %></td>
        <td><%= washer.firstname %></td>
        <td><%= washer.lastname %></td>
        <td><%= washer.phone %></td>
        <td><%= washer.email %></td>
        <td><%= washer.address %></td>
        <td><%= washer.status %></td>
        <td><%= washer.max_loads %></td>
        <td><%= washer.current_loads %></td>
        <td><%= washer.machine_description %></td>
        <td><%= washer.start_date %></td>
        <td><%= washer.total_loads_completed %></td>
        <td><%= link_to 'Show', washer %></td>
        <td><%= link_to 'Edit', edit_washer_path(washer) %></td>
        <td><%= link_to 'Destroy', washer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

