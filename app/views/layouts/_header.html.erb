<header>
  <nav class="navbar navbar-dark navbar-loopie fixed-top navbar-expand-md">
      <%= link_to "Loopie LLC", root_path , class: "navbar-brand"%>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
     <span class="navbar-toggler-icon"></span>
   </button>
   <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if logged_in? %>
          <li class="nav-item active">
            <%= link_to "Logout", :logout, method: :post, class: "nav-link"%><span class="sr-only">(current)</span>
            <%= link_to "Profile", user_path(current_user.id), class: "nav-link"%><span class="sr-only">(current)</span>
            <%= link_to "Loads", loads_path, class: "nav-link"%><span class="sr-only">(current)</span>
            <% if current_user.has_role? Washer %>
              <%= link_to "Drivers", drivers_path(current_user.id), class: "nav-link"%><span class="sr-only">(current)</span>
              <%= link_to "Washer Guidelines", washer_guidelines_path, class: "nav-link" %>
            <% elsif current_user.has_role? Driver %>
              <%= link_to "Driver Guidelines", washer_guidelines_path, class: "nav-link" %>
            <% end %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Info
              </a>
              <div class="dropdown-menu">
                <%= link_to "About", about_path, class: "dropdown-item" %>
                <%= link_to "Help", help_path, class: "dropdown-item" %>
                <%= link_to "Contacts", contact_path, class: "dropdown-item" %>
              </div>
            </li>
          </li>
        <% else %>
            <%= link_to "Login", login_path, class: "nav-link"%>
            <%= link_to "About", about_path, class: "nav-link" %>
            <%= link_to "Help", help_path, class: "nav-link"%>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
