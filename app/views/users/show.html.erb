<% provide(:title, @user.firstname) %>
<div class="container-light">
  <section class="user_info">
    <% if @user.has_role? :standard_driver %>
      <h2> DRIVER </h2>
    <%elsif @user.has_role? :standard_washer %>
      <h2> WASHER </h2>
    <%end%>
  </section>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
