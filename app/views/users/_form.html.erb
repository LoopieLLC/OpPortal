  <div class="container">
    <div class="row  center-header">
      <h1 class="">Edit information</h1>
        <p>edit information </p>
      </div>
    </div>

    <div class="form-shared">
      <%= form_with(model: user, local: true) do |form| %>
      <%= render 'error_messages' %>

      <form>
        <%# 1 is washer %>
          <% if user.role == 1%>
            <div class="container flex-center container-light">
              <div class="row">
                <div class="col-md-12 text-center">
                  <h2 class="">Washer info</h2>
                  <div class="hr-small"></div>
                </div>
              </div>
          <div class="row form-group">
            <div class="col-md-12">
              <%= form.label :machine_description %>
              <%= form.text_area :machine_description, class: 'form-control', placeholder: :machine_description %>
            </div>
            <div class="col-md-12">
              <%= form.label :start_date %>
              <%= select_date Date.today, prefix: :start_date, class: "form-control"%>
            </div>
            </div>
            </div>
          <% else %>
          <div class="container flex-center container-light">
            <div class="row">
              <div class="col-md-12 text-center">
                <h2 class="">Car Info</h2>
                <div class="hr-small"></div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm">
                <%= form.label :license_plate %>
                <%= form.text_field :license_plate , class: 'form-control',placeholder: :license_plate %>
              </div>
              <div class="col-sm">
                <%= form.label :vehicle_id_number %>
                <%= form.text_field :vin, class: 'form-control', placeholder: :vehicle_id_number %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm">
                <%= form.label :car_make %>
                <%= form.text_field :car_make , class: 'form-control',placeholder: :car_make %>
              </div>
              <div class="col-sm">
                <%= form.label :car_model %>
                <%= form.text_field :car_model , class: 'form-control',placeholder: :car_model %>
              </div>
              <div class="col-sm">
                <%= form.label :car_year %>
                <%= form.text_field :car_year , class: 'form-control',placeholder: :car_year %>
              </div>
              <div class="col-sm">
                <%= form.label :car_color %>
                <%= form.text_field :car_color , class: 'form-control',placeholder: :car_color %>
              </div>

              <div class="col-md-12">
                <%= form.label :insurance_info %>
                <%= form.text_area :insurance_info, class: 'form-control', placeholder: :insurance_info %>
              </div>
            </div>
            <hr>
            <%= form.label :license_image %>
            <%= form.file_field :avatar, class:'', placeholder: :license_image %>

            <%= form.label :start_date %>
            <%= select_date Date.today, prefix: :start_date, class: "form-control-file"%>
            <!-- date selector, ugly as hell please change css as my eyes are burning -->

          </div>
          <% end %>
          <div class="container">
             <%= form.submit 'Submit', :class => 'btn btn-lg btn-primary btn-block '%>
             <%= link_to 'Cancel', welcome_path, :class => 'btn btn-lg btn-primary btn-block'%>
          </div>
        </div>
      </form>
    <% end %>
  </div>
